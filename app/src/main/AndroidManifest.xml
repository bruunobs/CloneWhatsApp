<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.clonewhatsapp"
    >
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_whatsapp_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_whatsapp_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.CloneWhatsApp" >
        <activity
            android:name=".profile.PerfilActivity"
            android:exported="true" />
        <activity
            android:name=".ContatosActivity"
            android:exported="true" />
        <activity
            android:name=".ConfiguracoesActivity"
            android:exported="true"
            android:theme="@style/Theme.CloneWhatsApp" />
        <activity android:name=".principal.PrincipalActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cadastro.CadastroActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TemaLogin" />
        <activity
            android:name=".login.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TemaLogin" />
        <activity android:name=".MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>